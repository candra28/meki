local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- ======== ISI KOORDINAT CHECKPOINT DI SINI ========
local checkpoints = {
    Vector3.new(312, 205, -76),       -- TEST 
    Vector3.new(50, 10, 0),     -- CP2
    Vector3.new(100, 15, 20),   -- CP3
    -- tambah koordinat lagi jika perlu
}
-- ================================================

local gui = script.Parent
local mainButton = gui:WaitForChild("MainButton")
local menuFrame = gui:WaitForChild("MenuFrame")

-- Bersihkan menuFrame dulu
for _, child in pairs(menuFrame:GetChildren()) do
	if child:IsA("TextButton") then
		child:Destroy()
	end
end

-- Fungsi teleport
local function teleportToPosition(position)
	if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
		player.Character.HumanoidRootPart.CFrame = CFrame.new(position)
	end
end

-- Buat tombol otomatis untuk tiap koordinat
for i, pos in ipairs(checkpoints) do
	local btn = Instance.new("TextButton")
	btn.Name = "CP"..i.."Button"
	btn.Size = UDim2.new(1, 0, 0, 30) -- lebar penuh frame, tinggi 30px
	btn.Position = UDim2.new(0, 0, 0, (i-1)*35) -- jarak vertikal antar tombol
	btn.Text = "Teleport ke CP "..i
	btn.Parent = menuFrame

	btn.MouseButton1Click:Connect(function()
		teleportToPosition(pos)
		menuFrame.Visible = false
	end)
end

-- Klik tombol utama untuk toggle menu dropdown
mainButton.MouseButton1Click:Connect(function()
	menuFrame.Visible = not menuFrame.Visible
end)
